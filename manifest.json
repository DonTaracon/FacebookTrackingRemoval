{
  "name": "Facebook™ Tracking & Ad Removal",
  "version": "1.4.2",
  "description": "Provides options to remove Facebook™'s tracking from links and videos, and to remove ads from your feed",
  "icons": { "96": "src/icon.png" },

  "author": "Michael Ziminsky",
  "homepage_url": "https://github.com/mgziminsky/FacebookTrackingRemoval/tree/Chrome",

  "permissions": [
    "storage",
    "tabs"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "scripts": ["browser-polyfill.min.js", "src/background.js"]
  },

  "page_action": {
    "default_icon": "src/icon.png",
    "default_popup": "src/options.html"
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/app.css"],
      "js": ["browser-polyfill.min.js", "src/common.js", "src/util.js", "src/app.js"],
      "run_at": "document_end"
    }
  ],

  "manifest_version": 2
}
