{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "{bb1b80be-e6b3-40a1-9b6e-9d4073343f0b}"
    }
  },

  "name": "Facebook Tracking Removal",
  "version": "1.3.7",
  "description": "Removes Facebook's tracking from links and videos",
  "permissions": [
    "storage",
    "*://*.facebook.com/*"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "web_accessible_resources": ["options.html"],

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/app.css"],
      "js": ["src/common.js", "src/util.js", "src/app.js", "init.js"],
      "run_at": "document_end"
    }
  ],

  "developer": {
    "name": "Michael Ziminsky"
  },
  "homepage_url": "https://github.com/mgziminsky/FacebookTrackingRemoval/tree/Firefox"
}
