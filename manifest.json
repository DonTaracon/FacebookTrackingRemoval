{
  "name": "Facebook Tracking Removal",
  "version": "1.4.0",
  "description": "Removes Facebook's tracking from links and videos",
  "icons": { "96": "src/icon.png" },

  "author": "Michael Ziminsky",
  "homepage_url": "https://github.com/mgziminsky/FacebookTrackingRemoval/tree/Firefox",

  "applications": {
    "gecko": {
      "id": "{bb1b80be-e6b3-40a1-9b6e-9d4073343f0b}",
      "strict_min_version": "49.0"
    }
  },

  "permissions": [
    "*://*.facebook.com/*",
    "storage",
    "tabs"
  ],

  "options_ui": {
    "page": "src/options.html"
  },

  "background": {
    "scripts": ["src/background.js"]
  },

  "page_action": {
    "browser_style": true,
    "default_icon": "src/icon.png",
    "default_popup": "src/options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/app.css"],
      "js": ["src/common.js", "src/util.js", "src/app.js"],
      "run_at": "document_end"
    }
  ],

  "manifest_version": 2
}
