{
  "manifest_version": 2,
  "author": "Michael Ziminsky",
  "homepage_url": "https://github.com/mgziminsky/FacebookTrackingRemoval/tree/Chrome",

  "name": "Facebook Tracking Removal",
  "version": "1.3.7",
  "description": "Removes Facebook's tracking from links and videos",
  "permissions": [
    "storage",
    "*://*.facebook.com/*"
  ],

  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "css": ["src/app.css"],
      "js": ["src/common.js", "src/util.js", "src/app.js", "init.js"],
      "run_at": "document_end"
    }
  ]
}
